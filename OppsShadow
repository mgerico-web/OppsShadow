  <!-- SCRIPTS -->
  <script>
    // Menú móvil
    const menuBtn = document.getElementById('menuBtn');
    const mobileMenu = document.getElementById('mobileMenu');
    menuBtn?.addEventListener('click', () => mobileMenu.classList.toggle('hidden'));

    // Año footer
    document.getElementById('year').textContent = new Date().getFullYear();

    // ===== FORM: pega aquí tu endpoint real =====
    const ENDPOINT_URL = "REPLACE_WITH_ENDPOINT"; // <--- Sustituye por tu URL real

    const leadForm = document.getElementById('leadForm');
    const formMsg = document.getElementById('formMsg');

    leadForm.addEventListener('submit', async (e) => {
      e.preventDefault();
      formMsg.textContent = "Enviando...";
      formMsg.className = "text-sm text-slate-600";

      const formData = new FormData(leadForm);
      const payload = Object.fromEntries(formData.entries());

      if (!payload.email || !payload.name) {
        formMsg.textContent = "Por favor, completa nombre y e-mail.";
        formMsg.className = "text-sm text-red-600";
        return;
      }
      if (ENDPOINT_URL === "REPLACE_WITH_ENDPOINT" || ENDPOINT_URL === "#") {
        formMsg.innerHTML = "⚠️ Añade tu endpoint en el código (busca <code>ENDPOINT_URL</code>) para activar el envío.";
        formMsg.className = "text-sm text-amber-600";
        return;
      }

      try {
        const res = await fetch(ENDPOINT_URL, {
          method: "POST",
          headers: { "Content-Type": "application/json" },
          body: JSON.stringify(payload)
        });
        if (!res.ok) throw new Error("Request failed: " + res.status);
        formMsg.textContent = "¡Gracias! Hemos recibido tu solicitud. Te contactaremos pronto.";
        formMsg.className = "text-sm text-emerald-700";
        leadForm.reset();
      } catch (err) {
        console.error(err);
        formMsg.textContent = "No se pudo enviar. Revisa tu conexión o inténtalo más tarde.";
        formMsg.className = "text-sm text-red-600";
      }
    });
  </script>
</body>
</html>
